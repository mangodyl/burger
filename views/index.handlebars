
<div class="container">
  <h1 class="text-center">Enter the Burger...</h1>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-6">
      <h3>Burger Hit-List</h3>
        <ul>
          {{#each burger}}
            {{#unless this.devoured}}
              <li>
                {{this.name}}
              </li>
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col-6">
      <h3>Devoured</h3>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <h3>Add to Hit-List</h3>
    </div>
  </div>
</div>

