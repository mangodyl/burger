
<div class="container">
  <h1 class="text-center">Enter the Burger...</h1>
</div>

<div class="container text-center">
  <div class="row">
    <div class="col-6">
      <h3>Burger Hit-List</h3>
        <ul>
          {{#each burger}}
            {{#unless this.devoured}}
              <li>
                <p>{{this.burger_name}}</p>
              </li>
            {{/unless}}
          {{/each}}
        </ul>
    </div>
    <div class="col-6">
      <h3>Devoured</h3>
        <ul>
          {{#each burger}}
            {{#if this.devoured}}
              <li>
                <p>{{this.burger_name}}</p>
              </li>
            {{/if}}
          {{/each}}
        </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <h3>Add to Hit-List</h3>
      <form class="create-form">
    
        <div class="form-group">
          <label for="burger">Burger Name:</label>
          <input type="text" id="burger" name="name">
        </div>
    
        <div class="form-group">
          <label for="devoured">Already devoured?</label><br>
          <input type="radio" name="devoured" value="1" checked> Hell yeah!<br>
          <input type="radio" name="devoured" value="0"> Not yet!
        </div>
    
        <button type="submit">Add Burger</button>
      </form>
    </div>
  </div>
</div>

